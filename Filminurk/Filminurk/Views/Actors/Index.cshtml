@model IEnumerable<Filminurk.Models.Actors.ActorsIndexViewModel>

@{
	int rowNumber = 1;
}
<!--Siin on Index -->
<div>
	<a asp-action="Create" asp-controller="Actors" type="submit" class="btn btn-primary">Create Actor</a>
	<div class="h1">
		Actors
	</div>
</div>
<form method="get">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">First Name</th>
				<th scope="col">Last Name</th>
				<th scope="col">Nickname</th>
				<th scope="col">Actor Rating</th>
				<th scope="col">Gender</th>
				<th scope="col">Favorite Genre</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var actor in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@actor.FirstName</td>
					<td>@actor.LastName</td>
					<td>@actor.NickName</td>
					<td>@actor.ActorRating</td>
					<td>@actor.Gender</td>
					<td>@actor.MostActedGenre</td>
					<td>
						<a asp-action="Update" asp-controller="Actors" asp-route-id="@actor.ID" class="btn btn-outline-primary">Update</a>
						<a asp-action="Details" asp-controller="Actors" asp-route-id="@actor.ID" class="btn btn-outline-primary">Details</a>
						<a asp-action="Delete" asp-controller="Actors" asp-route-id="@actor.ID" class="btn btn-outline-danger">Delete</a>
					</td>
				</tr>
				rowNumber += 1;
			}
		</tbody>
	</table>
</form>