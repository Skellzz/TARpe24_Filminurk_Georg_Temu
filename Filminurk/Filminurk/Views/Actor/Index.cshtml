@model IEnumerable<Filminurk.Models.Movies.ActorsViewModel>

@{
    int rowNumber = 1;
}

<div>
    <a asp-action="Create" asp-controller="Actors" type="submit" class="btn btn-primary">Add Actor</a>
</div>
<div class="h1">
    Näitlejad
</div>
<form method="get">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Näitleja Nimi</th>
                <th scope="col">Näitleja PerekonnaNimi</th>
                <th scope="col">Näitleja Hüüdnimi</th>
                <th scope="col">Filmid kus on näidelnud</th>
                <th scope="col">Description</th>
                <th scope="col">Rating</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var actor in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@actor.Näitleja Nimi</td>
                    <td>@actor.Näitleja PerekonnaNimi</td>
                    <td>@actor.Näitleja Hüüdnimi</td>
					<td>@actor.Filmid kus on näidelnud</td>
                    <td>@actor.Description</td>
                    <td>@actor.Rating</td>
                    <td>
                        <a asp-action="Details" asp-controller="Actors" asp-route-id="@actor.ID" class="btn btn-primary">Info</a>
                        <a asp-action="Update" asp-controller="Actors" asp-route-id="@actor.ID" class="btn btn-primary">Uuenda</a>
                        <a asp-action="Delete" asp-controller="Actors" asp-route-id="@actor.ID" class="btn btn-outline-danger">Eemalda</a>
                    </td>
                </tr>
                rowNumber += 1;
            }
        </tbody>
    </table>
</form>
