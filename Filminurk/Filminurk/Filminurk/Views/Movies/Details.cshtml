@model Filminurk.Models.Movies.MoviesDetailsViewModel

<h1>Film Details</h1>

<div>
	<h1>Filmi Details</h1>
	<hr />
	<dl class="row">
		<div class="form-group row">
			<label asp-for="ID" class="col-sw-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.ID)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Title" class="col-sw-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Title)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Description" class="col-sw-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Description)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="FirstPublished" class="col-sw-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.FirstPublished)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Director" class="col-sw-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Director)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Actors" class="col-sw-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Actors)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="CurrentRating" class="col-sw-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.CurrentRating)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Genre" class="col-sw-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Genre)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Tagline" class="col-sw-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Tagline)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Warnings" class="col-sw-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Warnings)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="EntryCreatedAt" class="col-sw-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.EntryCreatedAt)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="EntryModifiedAt" class="col-sw-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.EntryModifiedAt)
		</div>
	</dl>

	<dl>
		@foreach (var images in Model.Images)
		{
			<partial name="_Images" model="images" />
		}
	</dl>


	<a asp-action="Index" asp-controller="Movies" class="btn btn-success">Return to List</a>
</div>