@model IEnumerable<Filminurk.Models.UserComments.UserCommentIndexViewModel>

@{
	int rowNumber = 1;
}

<div>
	<a asp-action="NewComment" asp-controller="userComments" type="submit" class="btn btn-primary">Make New Comment</a>
</div>
<div class="h1">
	Kasutajate arvustused:	
</div>
<div>
	<form method="get">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">JKN</th>
					<th scope="col">CommentId</th>
					<th scope="col">CommentBody</th>
					<th scope="col">IsHarmful</th>
					<th scope="col">CommentCreatedAt</th>
					<th scope="col">Tools</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var comment in Model)
				{
					<tr>
						<td>@rowNumber</td>
						<td>@comment.CommentID</td>
						<td>@comment.CommentBody</td>
						<td>@comment.IsHarmFul</td>
						<td>@comment.CommentCreatedAt</td>
						<td>
							<a asp-action="DetailsAdmin" asp-controller="UserComments" asp-route-id="@comment.CommentID" class="btn btn-primary">Details</a>
							<a asp-action="DeleteAdmin" asp-controller="UserComments" asp-route-id="@comment.CommentID" class="btn btn-primary">Delete</a>
						</td>
					</tr>
					rowNumber+=1;
				}
			</tbody>
		</table>
	</form>
</div>