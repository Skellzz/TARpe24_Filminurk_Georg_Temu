@model Filminurk.Models.OMDbApi.OMDbApiSearchViewModel

<h1>Otsi Film</h1>
<div>
	<form method="post">
		<div class="container">
			<div class="form-group col-md-offset-3 col-md-5">
				<h2>Siit saad Filme otsida:</h2>
				<label asp-for="Title" style="font:Arial"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
		</div>
		<div class="container">
			<div class="form-group col-md-offset-3 col-md-5">
				<button asp-controller="OMDbApi" asp-action="FindMovie" class="btn btn-primary">Search</button>
			</div>
		</div>
	</form>
</div>