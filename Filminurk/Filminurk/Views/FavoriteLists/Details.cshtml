@model Filminurk.Models.FavoriteLists.FavoriteListUserDetailsViewModel
@{
	int rowNumber = 1;
}
<div>
	@if (Model.IsReported == true)
	{
		@:Sinunimekiri rikub kogukonna reegleid<br/>
		@:Oleme seadnud nimekirja privaatseks kuni admin selle üle vaatab.<br/>
	}
</div>
<div>
	<table>
		<tr>@Model.ListName</tr>
		<tr>@* <tr><partial name="_ImageIndex" model="@Model.Image"></partial></tr> *@IMAGE HERE</tr>
	</table>
</div>
<div>
	<table class="table" style="border:solid">
		@foreach (var movie in Model.ListOfMovies)
		{
			<tr>
				<table>
					<tr>
						<td colspan="2">@movie.Title</td>
					</tr>
					<tr>
						<td>IMAGE HERE</td>
						<td>
							<table>
								<tr>@movie.Description</tr>
								<tr>@movie.Director</tr>
								<tr>@movie.Tagline</tr>
								<tr>@movie.Genre</tr>
								<tr>@movie.Warnings</tr>
							</table>
						</td>
					</tr>
				</table>
			</tr>
		}
	</table>
	<div>
		<input asp-action="UserDelete" asp-controller="FavoriteListsController" asp-route-id="@Model.FavoriteListID" type="submit" class="btn btn-danger" value="Kustuta Nimekiri"/>
		<input asp-action="UserTogglePrivacy" asp-controller="FavoriteListsController" asp-route-id="@Model.FavoriteListID" type="submit" class="btn btn-danger" value="Muuda nimekiri privaatseks" />
		<input asp-action="UserEditList" asp-controller="FavoriteListsController" asp-route-id="@Model.FavoriteListID" type="submit" class="btn btn-danger" value="Muuda nimekirja sisu ja andmeid" />
		<a asp-action="Index" asp-controller="FavoriteListsController" asp-route-id="@Model.FavoriteListID" type="submit" class="btn btn-danger" value="Kustuta Nimekiri">Tagasi</a>
	</div>
</div>