@using Filminurk.Core.Domain
@using Filminurk.Models.Movies

@model Filminurk.Models.Movies.MoviesCreateUpdateViewModel

@if(Model.ID.HasValue)
{
    <h1>Muuda Film</h1>
}
else
{
    <h1>Lisa Film</h1>
}


<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="ID" type="hidden"/>
        <input asp-for="EntryCreatedAt" type="hidden"/>
        <input asp-for="EntryModifiedAt" type="hidden"/>

        <div class="form-group row">
            <label asp-for="Title" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control"/>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control"/>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="FirstPublished" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FirstPublished" class="form-control"/>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Director" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Director" class="form-control"/>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CurrentRating" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CurrentRating" class="form-control"/>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CountryOfOrigin" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CountryOfOrigin" class="form-control"/>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="MovieGenre" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="MovieGenre" asp-items="Html.GetEnumSelectList<MovieGenre>()">
                    <option value="">-- Vali Žanr --</option>
                </select>
                <span asp-validation-for="MovieGenre"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="MovieGenre" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="MovieGenre" asp-items="Html.GetEnumSelectList<MovieGenre>()">
                    <option value="">-- Vali Alamžanr --</option>
                </select>
                <span asp-validation-for="MovieGenre"></span>
            </div>
        </div>
        @if(Model.ID.HasValue)
        {
            <input asp-action="Update" asp-controller="Movies" type="submit" class="btn btn-primary" value="Update"/>
        }
        else
        {
            <input asp-action="Create" asp-controller="Movies" type="submit" class="btn btn-primary" value="Create"/>
        }
        <a asp-action="Index" asp-controller="Movies" class="btn btn-success" >Back</a>

    </form>
</div>